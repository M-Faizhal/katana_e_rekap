# Environment variables for Coolify deployment
APP_NAME=KATANA
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://your-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=katana_db
DB_USERNAME=katana_user
DB_PASSWORD=secure_password_change_this
DB_ROOT_PASSWORD=secure_root_password_change_this

# Cache Configuration
CACHE_STORE=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Domain for Coolify
DOMAIN=your-domain.com

# Broadcasting
BROADCAST_CONNECTION=log

# Vite
VITE_APP_NAME="${APP_NAME}"
